{
    "name": "quest-board",
    "version": "0.1.0",
    "description": "Gamified task tracker with RPG mechanics for Obsidian",
    "main": "main.js",
    "scripts": {
        "css:build": "postcss src/styles/index.css -o styles.css",
        "css:watch": "postcss src/styles/index.css -o styles.css --watch",
        "dev": "node esbuild.config.mjs",
        "build": "npm run css:build && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "deploy:test": "npm run build && node deploy.mjs test",
        "deploy:production": "npm run build && node deploy.mjs production",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:balance": "vitest run test/combat-simulator.test.ts",
        "version": "node version-bump.mjs && git add manifest.json versions.json"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "rpg",
        "gamification",
        "task-management"
    ],
    "author": "Brad Wales",
    "license": "MIT",
    "devDependencies": {
        "@types/dompurify": "^3.0.5",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitest/ui": "^4.0.18",
        "builtin-modules": "^3.3.0",
        "esbuild": "^0.19.0",
        "obsidian": "latest",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "tslib": "^2.6.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "dompurify": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "zustand": "^4.4.0"
    }
}